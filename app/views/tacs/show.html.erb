<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<%= link_to tacs_path do %>
 			<p><span class="glyphicon glyphicon-chevron-left"></span> Back </p>
		<% end %>
		<div class="panel panel-default">
			<div class="panel-heading center">
				<%= image_tag @tac.image.url(:large) %>
			</div>
			<div class="panel-body">
				<p><%= @tac.description %></p>
				<p><strong><%= @tac.user.name if @tac.user %></strong></p>
				
				<% if current_user && @tac.user == current_user %>
					<%= link_to edit_tac_path(@tac) do %>
						<span class="glyphicon glyphicon-edit"></span> Edit
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>